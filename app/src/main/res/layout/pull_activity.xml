<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    style="?android:attr/buttonBarStyle"
    tools:context=".PullActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp">

        <Button
            android:id="@+id/button_q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/query1"
            android:onClick="query1Click"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@color/common_google_signin_btn_text_light_disabled"
            android:layout_marginEnd ="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/button_q2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/query2"
            android:onClick="query2Click"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@color/common_google_signin_btn_text_light_disabled"
            android:layout_weight="1"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp">

        <EditText
            android:id="@+id/userID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/student_id"
            android:layout_weight="2"
            android:inputType="" />

    </LinearLayout>


    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="320dp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp">

        <Button
            android:id="@+id/logout"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/common_google_signin_btn_text_light_disabled"
            android:onClick="LogoutClick"
            android:layout_marginEnd ="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/sign_out" />

        <Button
            android:id="@+id/pushActivityBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="PushClick"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@color/common_google_signin_btn_text_light_disabled"
            android:text="@string/push" />
    </LinearLayout>


</LinearLayout>